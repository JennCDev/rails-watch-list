<div class="banner mb-5 bg-home bg">
  <div class="container">
    <h1 class="text-center">Save any kind of movies</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between mb-5">
    <h2 class="fw-bold">My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-flat btn-green" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <%= link_to list_path(list), class:"link-no-underline" do %>
          <div class="card-category mb-5 bg" <% if list.photo.attached? %>
                                              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')"
                                             <%end%>>
            <span class="text-white"><%= list.name %></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

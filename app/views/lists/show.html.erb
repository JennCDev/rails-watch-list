<div class="banner banner-list mb-5">
  <div class="container ">
    <button class="btn btn-flat btn-yellow"><%= pluralize(@list.movies.count, 'movie') %></button>
    <h1 class="text-center"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end mb-5">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-flat btn-green" %>
  </div>

  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="card-trip col-6">
        <img src="<%= movie.poster_url %>" />
        <div class="card-trip-infos">
          <div class="mb-5">
            <h2>
              <%= movie.title %>
              <span class="text-secondary"> - <%= movie.rating.round(1) %></span>
              <i class="fa-solid fa-star text-warning"></i>
            </h2>
            <p><%= movie.overview %></p>
          </div>
          <%= link_to "Delete", bookmark_path(@list.bookmarks.find_by(movie_id: movie.id)),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-danger link-no-underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
